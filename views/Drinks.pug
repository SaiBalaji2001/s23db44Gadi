extends layout

block content
    h1=title
    - let items = results 

    div(class= "container-fluid")
        div(class = "row")  
            each item, index in items 
                div(class= "col-sm-2", onclick=`buy(${index})`) DrinkName : &nbsp; #{item.Drinks_name}
                div(class= "col-sm-2", onclick=`buy(${index})`) DrinkSize : &nbsp; #{item.Drinks_size}
                div(class= "col-sm-2", onclick=`buy(${index})`) DrinkCost : &nbsp; #{item.cost}


    script.
        function buy(itemNum){
        alert(`You purchased item ${itemNum+1}`)
        }
